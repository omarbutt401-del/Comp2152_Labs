#!/usr/bin/env python3
# rand_demo.py - simple beginner examples of Python's random module

import random
import string

def roll_dice(sides=6, rolls=1):
    return [random.randint(1, sides) for _ in range(rolls)]

def flip_coin():
    return random.choice(["Heads", "Tails"])

def random_float(a=0.0, b=1.0):
    return random.uniform(a, b)

def random_choice_from_list(items):
    if not items:
        return None
    return random.choice(items)

def shuffle_list(items):
    items_copy = list(items)
    random.shuffle(items_copy)
    return items_copy

def random_sample(items, k=1):
    return random.sample(items, k)

def generate_password(length=12, use_punctuation=True):
    alphabet = string.ascii_letters + string.digits
    if use_punctuation:
        alphabet += string.punctuation
    return ''.join(random.choice(alphabet) for _ in range(length))

def number_guessing_game(max_num=20, max_attempts=5):
    secret = random.randint(1, max_num)
    print(f"Guess the number between 1 and {max_num}. You have {max_attempts} attempts.")
    for attempt in range(1, max_attempts + 1):
        try:
            guess = int(input(f"Attempt {attempt}: "))
        except ValueError:
            print("Please enter a valid integer.")
            continue
        if guess == secret:
            print("Correct! You win.")
            return True
        elif guess < secret:
            print("Too low.")
        else:
            print("Too high.")
    print(f"Out of attempts. The number was {secret}.")
    return False

def demo():
    print("Random demo:")
    print("- Roll 3 six-sided dice:", roll_dice(6, 3))
    print("- Flip a coin:", flip_coin())
    print("- Random float in [0,1):", random_float())
    fruits = ["apple", "banana", "cherry", "date"]
    print("- Random choice from list:", random_choice_from_list(fruits))
    print("- Shuffled list:", shuffle_list(fruits))
    print("- Sample 2 items:", random_sample(fruits, 2))
    print("- Random password (12 chars):", generate_password(12))

if __name__ == "__main__":
    # Run demo; uncomment to play the guessing game instead.
    demo()
    # number_guessing_game()